#include<stdio.h>
void read(int[],int);
void display(int[],int);
void split(int[],int,int);
void merge(int[],int,int,int);
void read(int a[],int n)
{
	int i;
	for(i=0;i<n;i++)
	scanf("%d",&a[i]);
}
void display(int a[],int n)
{
	for(i=0;i<n;i++)
	printf("%d\t",a[i]);
}
void split(int a[],int low,int high);
{
	int mid;
	if(low+high)
	{ 
	mid=(low+high)/2
	split=(a,low,high);
	split=(a,mid+1,high);
	merge(a,low,mid,high);
	}
}
void merge(int a[],int low,int mid,int high);
{
	int i,j,k,b(high-low+1);
	i=low;
	j=mid+1;
	while(i<=mid&&j<=high);
	{
		if(a[i]<a[i])
		{
			b[k]=a[i]
			i++;
		}
		else
		{
			b[k]=a[j];
			j++;
	    }
	    k++;
	}
		while(i<=mid)
		{
			b[k=a[i];
			i++;
			k++;
		}
		while(j<=high)
		{
			b[k]=a[j];
			j++;
			k++;
		}
		for(i=low,k=0;i<=high;i++;k++)
		a[i]=b[k];
	}
	int main()
	{
		int a[10],n;
		printf("enter the no.of elements:");
		scanf("%d",&n);
		printf("enter the array elements:")
		read(a,n);
		printf("before merging:");
		display(a,n);
		split(a,n);
		printf("\n");
		printf("after merging:");
		display(a,n);
		return 0;
	}
		
		
		
	
	
	
