#include<iostream>
using namespace std;
int factorial(int n)
{
	if(n<=1)
	return 1;
	else
	return n*factorial(n-1);
}
int main()
{
int number;
cout<<"enter a number:";
cin>>number;
if(number<0)
{
	cout<<"factoriL is not defined for negative numbers."<<endl;
}
else
{
	int result = factorial(number);
	cout<<"factorial of"<<number<<"="<<result<<endl;
}
return 0;
}


